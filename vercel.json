{
    "version": 2,
    "builds": [
        {
            "src": "src/ui/web.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.11",
                "maxLambdaSize": "50mb",
                "buildCommand": "pip install -r requirements.txt",
                "startCommand": "streamlit run src/ui/web.py --server.port $PORT --server.address 0.0.0.0",
                "excludes": [
                    ".git",
                    "__pycache__",
                    "*.pyc",
                    "tests/",
                    "temp/",
                    "nltk_data/",
                    "seo_analysis_results/",
                    "test_documents/"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/ui/web.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "PORT": "3000"
    }
}